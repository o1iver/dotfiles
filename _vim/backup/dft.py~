import cmath

# Discrete fourier transform
def dft(x):
    t = []
    N = len(x)
    for k in range(N):
        print('k=%s', k)
        a = 0
        for n in range(N):
            print('n=%s', n)
            #a += x[n]*cmath.exp(-1*2j*cmath.pi*k*n*(1/(N+1)))
            a += x[n]*cmath.exp(-2j*cmath.pi*k*n*(1/N))
        t.append(a)
    return t

# Inverse discrete fourier transform
def idft(t):
    x = []
    N = len(t)
    for n in range(N):
        a = 0
        for k in range(N):
            a += t[k]*cmath.exp(2j*cmath.pi*k*n*(1/N))
        a /= N
        x.append(a)
    return x

        
